<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div class="top_menu round">
		<% if current_user.present? %>
			Welcome <%= current_user.email %>!
			<%= link_to 'Logout', 'logout' %>
		<% else %>
			<%= link_to 'Login', 'login' %>
			<%= link_to 'Sign up', new_user_path %>
		<% end %>
	</div>
	<div class="body_container round">
		<p id="notice"><%= notice %></p>
		<p id="alert"><%= alert %></p>
		<%= yield %>
	</div>

</body>
</html>
